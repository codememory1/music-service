<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.readthedocs.io/en/latest/configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         bootstrap="tests/bootstrap.php"
         convertDeprecationsToExceptions="false"
>
    <php>
        <ini name="display_errors" value="1" />
        <ini name="error_reporting" value="-1" />
        <server name="APP_ENV" value="test" force="true" />
        <server name="SHELL_VERBOSITY" value="-1" />
        <server name="SYMFONY_PHPUNIT_REMOVE" value="" />
        <server name="SYMFONY_PHPUNIT_VERSION" value="9.5" />
        <server name="API_VERSION" value="v1" />
        <server name="APP_DEBUG" value="false" />
    </php>

    <testsuites>
        <testsuite name="Public Security">
            <directory>tests/Application/PublicAvailable/Security</directory>
        </testsuite>
        <testsuite name="Public Language">
            <directory>tests/Application/PublicAvailable/Language</directory>
        </testsuite>
        <testsuite name="Public Translation">
            <directory>tests/Application/PublicAvailable/Translation</directory>
        </testsuite>
        <testsuite name="Public Subscription">
            <directory>tests/Application/PublicAvailable/Subscription</directory>
        </testsuite>
        <testsuite name="Public Album">
            <file>tests/Application/PublicAvailable/Album/CreateAlbumTest.php</file>
            <file>tests/Application/PublicAvailable/Album/UpdateAlbumTest.php</file>
            <file>tests/Application/PublicAvailable/Album/AllAlbumsTest.php</file>
            <file>tests/Application/PublicAvailable/Album/DeleteAlbumTest.php</file>
            <file>tests/Application/PublicAvailable/Album/PublishAlbumTest.php</file>
        </testsuite>
    </testsuites>

    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">src</directory>
        </include>
    </coverage>

    <extensions>
        <extension class="DAMA\DoctrineTestBundle\PHPUnit\PHPUnitExtension" />
    </extensions>
</phpunit>
